<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_theme"
            android:backgroundTint="#BAD5EE"
            tools:context=".activities.ProductActivity">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_forum_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="629dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_forum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guideline_forum_add">

                <androidx.cardview.widget.CardView
                    android:id="@+id/info_add_forum"
                    android:layout_width="310dp"
                    android:layout_height="205dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/custom_input"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="8sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/user_forum_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:text="Username"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.277"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <EditText
                            android:id="@+id/input_forum"
                            android:layout_width="280dp"
                            android:layout_height="80dp"
                            android:background="@drawable/custom_input"
                            android:ems="200"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.496" />

                        <ImageButton
                            android:id="@+id/profile_form"
                            android:layout_width="42dp"
                            android:layout_height="39dp"
                            android:background="@drawable/custom_input"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.059"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.096"
                            app:srcCompat="@drawable/ic_person" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/post_forum"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@drawable/rounder_bg"
                            android:text="Post"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.927"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.908" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/botttom_nav_form"
                    android:layout_width="414dp"
                    android:layout_height="67dp"
                    android:layout_gravity="bottom"
                    android:background="@color/app_theme"
                    android:paddingStart="10dp"
                    android:paddingEnd="15dp"
                    app:itemRippleColor="@color/white"
                    app:menu="@menu/botton_nav_forum">

                </com.google.android.material.bottomnavigation.BottomNavigationView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <ImageView
                android:layout_width="121dp"
                android:layout_height="86dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.024"
                app:srcCompat="@drawable/logo" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/back_forum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:src="@drawable/arrow_back_icon"
                app:layout_constraintBottom_toTopOf="@+id/cardview_forum"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>