<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme"
    tools:context=".product">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="93dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/logo" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/info_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        android:isScrollContainer="false"
        android:src="@drawable/ic_person"
        android:tint="#6E6C6C"
        app:backgroundTint="#C6C6C6"
        app:fabCustomSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557"
        app:shapeAppearance="@style/Widget.Material3.CircularProgressIndicator" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/textView3"
                    android:layout_width="221dp"
                    android:layout_height="29dp"
                    android:background="@drawable/custom_input"
                    android:drawableRight="@drawable/icn_search"
                    android:hint="Search Produk"
                    android:padding="4dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.289"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.031" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/info_produk"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.108">

                    <TextView
                        android:id="@+id/nama_ikan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ikan Mujair"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/Gambar_ikan"
                        android:layout_width="229dp"
                        android:layout_height="117dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="20dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/harga_ikan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="180dp"
                        android:text="Rp50.000" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/info_produk2"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/info_produk">

                    <TextView
                        android:id="@+id/nama_ikan2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ikan Mujair"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/Gambar_ikan2"
                        android:layout_width="229dp"
                        android:layout_height="117dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="20dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/harga_ikan2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="180dp"
                        android:text="Rp50.000" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/info_produk3"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/info_produk2">

                    <TextView
                        android:id="@+id/nama_ikan3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ikan Mujair"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/Gambar_ikan3"
                        android:layout_width="229dp"
                        android:layout_height="117dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="20dp"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/harga_ikan3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="180dp"
                        android:text="Rp50.000" />


                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/botttom_nav_bar"
            android:layout_width="414dp"
            android:layout_height="67dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="40dp"
            android:background="@color/app_theme"
            app:itemRippleColor="@color/white"
            app:menu="@menu/bottom_nav_menu"
            android:paddingStart="10dp"
            android:paddingEnd="15dp">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

